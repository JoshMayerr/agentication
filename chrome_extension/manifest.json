{
  "manifest_version": 3,
  "name": "Session Capture for API Testing",
  "version": "1.0.0",
  "description": "Securely capture auth sessions for API testing",
  "permissions": ["webRequest", "cookies", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
